{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "vite-plugin-svgr/client", "jest", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["./src/*"],
    },
    "outDir": "./build",
    "jsxImportSource": "@emotion/react",
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "_cemetary/AddLineItemsModal.tsx",
    "_cemetary/HeaderDetailsDynamicField.tsx",
    "proxy/**/*.js",
    "src/components/base/floating-element-wrapper"
  ],
  "exclude": ["node_modules", "target", "build", "_cemetary", "_feature-coming-soon"],
  "references": [{ "path": "./tsconfig.strict.json" }]
}
